{
  "name": "piumino",
  "version": "2.0.0",
  "description": "Piumino, meaning duvet in Italian, is like a duvet over the bed called Angular TestBed. It provides test helpers to test trivial things like inputs and outputs with a single line.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/*",
    "!**/*.spec.js",
    "!**/*.spec.d.ts"
  ],
  "scripts": {
    "build": "rimraf dist && tsc",
    "build:watch": "npm run build -- --watch",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/luukrijnbende/piumino.git"
  },
  "keywords": [
    "angular",
    "testbed",
    "duvet",
    "test",
    "testing",
    "unittest",
    "componenttest"
  ],
  "author": "Luuk Rijnbende",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/luukrijnbende/piumino/issues"
  },
  "homepage": "https://github.com/luukrijnbende/piumino#readme",
  "devDependencies": {
    "@angular/common": "^12.1.1",
    "@angular/core": "^12.1.1",
    "@angular/platform-browser": "^12.1.1",
    "@types/jest": "^26.0.24",
    "jest": "^27.0.6",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "fast-deep-equal": "^3.1.3"
  }
}
